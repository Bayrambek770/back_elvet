# Django
SECRET_KEY=change-me
DEBUG=False
# For local development, include localhost and 127.0.0.1. Do NOT use 0.0.0.0 as a URL.
# In production, set your real domains (comma-separated).
ALLOWED_HOSTS=localhost,127.0.0.1,your.domain.com,another.domain
# CSRF origins must include scheme. For local use http://localhost:8000
# Optionally add http://127.0.0.1:8000 if you access via 127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000,https://your.domain.com,https://another.domain

# Database (choose one)
# If using Postgres via compose, set DATABASE_URL using container name
DATABASE_URL=postgres://back_elvet:back_elvet@db:5432/back_elvet
# Or leave DATABASE_URL empty and Django will use SQLite

# Celery / Redis
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_MODE=polling
TELEGRAM_WEBHOOK_URL=
TELEGRAM_LOGIN_URL_BASE=https://example.com/login

# Gunicorn
GUNICORN_WORKERS=3
GUNICORN_THREADS=2
GUNICORN_LOGLEVEL=info

# Optional security toggles
USE_HTTPS=false
SECURE_HSTS_SECONDS=31536000
