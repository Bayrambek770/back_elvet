# Django
SECRET_KEY=change-me
DEBUG=False
ALLOWED_HOSTS=your.domain.com,another.domain
CSRF_TRUSTED_ORIGINS=https://your.domain.com,https://another.domain

# Database (choose one)
# If using Postgres via compose, set DATABASE_URL using container name
DATABASE_URL=postgres://back_elvet:back_elvet@db:5432/back_elvet
# Or leave DATABASE_URL empty and Django will use SQLite

# Celery / Redis
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_MODE=polling
TELEGRAM_WEBHOOK_URL=
TELEGRAM_LOGIN_URL_BASE=https://example.com/login

# Gunicorn
GUNICORN_WORKERS=3
GUNICORN_THREADS=2
GUNICORN_LOGLEVEL=info

# Optional security toggles
USE_HTTPS=false
SECURE_HSTS_SECONDS=31536000
